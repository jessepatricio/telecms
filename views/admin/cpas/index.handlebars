<div class="row">
    {{#if cpas}}
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h2>Cable Plant Alteration - ABFFP Architecture</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 m-2">
                <a href="/admin/cpas/create" class="btn btn-success btn-sm">Create</a>
            </div>
            <div class="col-sm m-2">
                <form class="form-inline" action="/admin/cpas/search_cpa" method="POST">
                    <div class="form-group m-1">
                        <label for="abffpid" class="m-1">ABFF-ID</label>
                        <select name="abffpid" id="abffpid" class="form-control">
                            {{#select abffpid}}
                            <option value="">--all--</option>
                            {{#each cpalocs}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}} {{/select}}
                        </select>
                    </div>
                    {{!--
                    <div class="form-group m-2">
                        <label for="mduct1" class="m-1">Duct#</label>
                        <select name="mduct1" id="mduct1" class="form-control">
                            {{#select mduct1}}
                            <option value="">--all--</option>
                            {{#each mducts}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}} {{/select}}
                        </select>
                    </div> --}}
                    <div class="form-group">
                        <div class="m-1">
                            <input type='submit' value='Apply Filter' class="btn btn-info btn-sm">
                        </div>
                        <div class="m-1">
                            <a href="/admin/cpas" class="btn btn-warning btn-sm">Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">

            <div class="col-sm">
                <table class="table-sm table-responsive table-hover">
                    <thead>
                        <tr>
                            <th>Location</th>
                            <th>ABFFP ID</th>
                            <th>MDuct Tube</th>
                            <th>MDuct Group</th>
                            <th>26-Way</th>
                            {{!--
                            <th>10-Way</th> --}}
                            <th>12-Way</th>
                            {{!--
                            <th>7-Way</th>
                            <th>4-Way</th> --}}
                            <th>Street Number</th>
                            <th>Street Name</th>
                            <th>Status</th>
                            <th>Remarks</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cpas}}
                        <tr>
                            <td nowrap>{{location}}</td>
                            <td nowrap>{{abffpid}}</td>
                            <td>{{mduct1}}</td>
                            <td nowrap>{{mduct2}}</td>
                            <td>{{way26tube}}</td>
                            {{!--
                            <td>{{way10tube}}</td> --}}
                            <td nowrap>{{way12tube}}</td>
                            {{!--
                            <td>{{way7tube}}</td>
                            <td>{{way4tube}}</td> --}}
                            <td>{{streetnumber}}</td>
                            <td>{{streetname}}</td>
                            <td>{{status}}</td>
                            <td>{{remarks}}</td>
                            <td>
                                <a href="/admin/cpas/edit/{{id}}" class="btn btn-info btn-sm">Edit</a>
                            </td>
                            <td>
                                <form action="/admin/cpas/{{id}}?_method=DELETE" method="post">
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>

                <!-- Pagination -->
                <ul class="pagination justify-content-center mb-4">

                    {{#paginate current=current pages=pages}}{{/paginate}}

                </ul>
            </div>
        </div>
    </div>
    {{else}}
    <div class="container">
        <h1 class="my-4">CPA not found!</h1>
        <div class="form-inline">
            <div style="margin-bottom: 15px;">
                <a href="/admin/cpas/create" class="btn btn-success btn-sm m-2">Create</a>
            </div>
            <div style="margin-bottom: 15px;">
                <a href="/admin/cpas" class="btn btn-secondary btn-sm">Back</a>
            </div>
        </div>
    </div>
    {{/if}}
</div>