<h1>Edit Cabinet</h1>

<form action="/admin/cabinets/edit/{{cabinet.id}}?_method=PUT" method="POST">
    <div class="form-group">
        <label for="labelcabinet">Name</label>
        <input name="name" type="text" class="form-control" value="{{cabinet.name}}">
    </div>
    <div class="form-group">
        <label for="labellaterals">Laterals Count</label>
        <input name="dropcount" type="text" class="form-control" value="{{cabinet.dropcount}}">
    </div>
    <button type="submit" class="btn btn-primary btn-sm">Update Cabinet</button>
    <a href="/admin/cabinets" class="btn btn-secondary btn-sm">Cancel</a>
</form>