<h1>Create Cabinet</h1>

{{#each errors}}
<div class="alert alert-danger">
    {{message}}
</div>
{{/each}}

<form action="/admin/cabinets/create" method="POST">
    <div class="form-group">
        <label for="inputName">Cabinet</label>
        <input name="name" type="text" class="form-control" placeholder="Enter Cabinet Name" required>
    </div>
    <div class="form-group">
        <label for="laterals">Laterals Count</label>
        <input name="dropcount" type="text" class="form-control" placeholder="Enter Drop Count" required>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Save</button>
    <a href="/admin/cabinets" class="btn btn-secondary btn-sm">Cancel</a>
</form>