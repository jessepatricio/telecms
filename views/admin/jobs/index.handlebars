    <div class="container">

        <div class="row">
            <div class="col-sm">
                <h2>Job List</h2>
            </div>
            <div class="col-sm">
                <div class="form-group">
                    <a href="/admin/jobs/create" class="btn btn-success btn-sm">Create</a>
                </div>
                <div class="form-group">

                    {{!--
                    <div class="col-8 text-right">
                        <form action="/admin/reports/filter" class="form-inline" method="POST">
