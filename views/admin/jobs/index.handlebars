            </div>
        </div>


        <div class="row">
            <div class="col-sm">
                <table class="table-sm table-responsive table-hover">
                    <thead>
                        <tr>
                            <th>Location</th>
                            <th>Plan</th>
                            <th>Tasks</th>
                            <th>Resource</th>
                            <th>Status</th>
                            <th>Comments</th>
                            <th>Date</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each jobs}}
                        <tr>
                            <td tabindex="{{_id}}" data-toggle="popover" data-trigger="focus" title="Record Information" data-content="Created by {{addedby.firstname}} on {{formatDate timestamp 'DD/MM/YYYY h:mm a' }}. Updated by {{modifiedby.firstname}} on {{formatDate date 'DD/MM/YYYY h:mm a' }}">{{plan.location.name}}</td>
                            <td tabindex="{{_id}}" data-toggle="popover" data-trigger="focus" title="Plan Information" data-content="Addresses: {{plan.instruction}}">{{plan.lno}}</td>
                            <td>{{task.description}}</td>
                            <td>{{user.firstname}}</td>
                            <td>{{status}}</td>
                            <td>{{comments}}</td>
                            <td>{{formatDate date 'DD/MM/YYYY h:mm a' }}</td>
                            <td>
                                {{#if file}}
                                <a href='/uploads/{{file}}' target="_blank">
                                    <img height="50px" src='/uploads/{{file}}' />
                                </a> {{/if}}
                            </td>
                            <td>
                                <a href="/admin/jobs/edit/{{id}} " class="btn btn-info btn-sm ">Edit</a>
                            </td>
                            <td>
                                <form action="/admin/jobs/{{id}}?_method=DELETE" method="post">
                                    <button class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
