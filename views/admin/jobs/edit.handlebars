<h1>Edit Job</h1>
{{#each errors}}
<div class="alert alert-danger">
    {{message}}
</div>
{{/each}}

<form action="/admin/jobs/edit/{{job.id}}?_method=PUT" method="POST">
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputPlan">Plan</label>
                <select name="plan" id="plan" class="form-control">

                    {{#select job.plan}} {{#each plans}}
                    <option value="{{id}}">{{lno}}</option>
                    {{/each}} {{/select}}

                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputTask">Task</label>
                <select name="task" id="task" class="form-control">

                    {{#select job.task}} {{#each tasks}}
                    <option value="{{id}}">{{description}}</option>
                    {{/each}} {{/select}}

                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputUser">Assigned To</label>
                <select name="user" id="user" class="form-control">

                    {{#select job.user}} {{#each users}}
                    <option value="{{id}}">{{firstname}}</option>
                    {{/each}} {{/select}}

                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputStatus">Status</label>
                <select name="status" id="status" class="form-control">
                    {{#select job.status}}
                    <option value="incomplete">Incomplete</option>
                    <option value="completed">Completed</option>
                    {{/select}}
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputComments">Comments</label>
                <textarea name="comments" cols="30" rows="10" type="text" class="form-control" id="comments" placeholder="Enter comments">{{job.description}}</textarea>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Save</button>
    <a href="/admin/jobs" class="btn btn-secondary btn-sm">Cancel</a>
</form>