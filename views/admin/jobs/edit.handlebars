<h1>Edit Job</h1>
{{#each errors}}
<div class="alert alert-danger">
    {{message}}
</div>
{{/each}}

<form action="/admin/jobs/edit/{{job.id}}?_method=PUT" method="POST" enctype="multipart/form-data">

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-3">
                <label for="labellno">Lateral No. (optional)</label>
                <input name="lno" type="text" class="form-control" value={{lno}}>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputPlan">Cabinet</label>
                <select name="cabinet" id="cabinet" class="form-control">

                    {{#select job.cabinet}} {{#each cabinets}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}} {{/select}}

                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputTask">Task</label>
                <select name="task" id="task" class="form-control">

                    {{#select job.task}} {{#each tasks}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}} {{/select}}

                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-check">
                    With <label for="withDig" class="form-check-label">
                        <input name="withDig" type="checkbox" class="form-check-input" id="withDig" {{#if job.withDig}}
                            checked {{/if}}>
                        Dig
                    </label> |
                    <label for="withBackfill" class="form-check-label">
                        <input name="withBackfill" type="checkbox" class="form-check-input" id="withBackfill"
                            {{#if job.withBackfill}} checked {{/if}}>
                        Backfill
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-3">
                <label for="labelstreetno">Street No.</label>
                <input name="streetno" id="streetno" type="text" class="form-control" value={{job.streetno}} required
                    placeholder="Enter Street no.">
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="form-row">
            <div class="col-md-3">
                <label for="labelstreetname">Street Name</label>
                <input name="streetname" id="streetname" type="text" class="form-control" value="{{job.streetname}}"
                    required placeholder="Enter Street name">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputUser">Assigned To</label>
                <select name="user" id="user" class="form-control">

                    {{#select job.user}} {{#each users}}
                    <option value="{{id}}">{{firstname}}</option>
                    {{/each}} {{/select}}

                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputStatus">Status</label>
                <select name="status" id="status" class="form-control">
                    {{#select job.status}}
                    <option value="incomplete">Incomplete</option>
                    <option value="completed">Completed</option>
                    {{/select}}
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputRemarks">Remarks</label>
                <textarea name="remarks" cols="30" rows="10" type="text" class="form-control" id="remarks" placeholder="Enter remarks">{{job.remarks}}</textarea>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="file">Task Image</label>
                <input type="file" name="file" class="form-control">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-check">
            <label for="allowComments" class="form-check-label">
                <input name="allowNotify" type="checkbox" class="form-check-input" id="allowNotify"> Send
                Notification
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary btn-sm">Save</button>
    <a href="/admin/jobs" class="btn btn-secondary btn-sm">Cancel</a>
</form>