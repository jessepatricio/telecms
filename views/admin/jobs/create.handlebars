<h1>Create Job</h1>
{{#each errors}}
<div class="alert alert-danger">
    {{message}}
</div>
{{/each}}

<form action="/admin/jobs/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-3">
                <label for="labellno">Lateral No. (optional)</label>
                <input name="lno" type="text" class="form-control">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputPlan">Cabinet</label>
                <select name="cabinet" id="cabinet" class="form-control">

                    {{#each cabinets}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}

                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputTask">Task</label>
                <select name="task" id="task" class="form-control">

                    {{#each tasks}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}

                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <div class="form-check">
                    With <label for="withDig" class="form-check-label">
                        <input name="withDig" type="checkbox" class="form-check-input" id="withDig"> Dig
                    </label> |
                    <label for="withBackfill" class="form-check-label">
                        <input name="withBackfill" type="checkbox" class="form-check-input" id="withBackfill"> Backfill
                    </label>
                </div>
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="form-row">
            <div class="col-md-3">
                <label for="labelstreetno">Street No.</label>
                <input name="streetno" type="text" class="form-control" required>
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="form-row">
            <div class="col-md-3">
                <label for="labelstreetname">Street Name</label>
                <input name="streetname" type="text" class="form-control" required>
            </div>
        </div>
    </div>



    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputUser">Assigned To</label>
                <select name="user" id="user" class="form-control">

                    {{#each users}}
                    <option value="{{id}}">{{firstname}}</option>
                    {{/each}}

                </select>
            </div>
        </div>
    </div>



    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="inputStatus">Status</label>
                <select name="status" id="status" class="form-control">
                    <option value="incomplete">Incomplete</option>
                    <option value="completed">Completed</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="remarks">Remarks</label>
                <textarea name="remarks" cols="30" rows="10" type="text" class="form-control" id="remarks" placeholder="Enter remark"></textarea>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <label for="allowComments" class="form-check-label">
                <input name="allowNotify" type="checkbox" class="form-check-input" id="allowNotify"> Send Notification
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col-md-6">
                <label for="file">Job Image</label>
                <input type="file" name="file" accept="image/*" id="file" class="form-control">
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-sm">Save</button>
    <a href="/admin/jobs" class="btn btn-secondary btn-sm">Cancel</a>
</form>